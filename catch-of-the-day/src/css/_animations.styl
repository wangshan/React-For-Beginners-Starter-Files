/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

/*
  can not transit from auto height to fixed height, so have to use max-height=0 first
*/
.order-enter
  background red
  transition all 0.5s // this number must be the same as in transitionEnterTimeout
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    background yellow
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0);


.order-leave
  transition all 0.5s
  transform translateX(0) rotate(1000deg)
  &.order-leave-active
    transform translateX(120%) rotate(0)
    max-height 0
    padding 0


.count-enter
  transition all 0.25s
  transform translateY(100%) // start off screen
  &.count-enter-active
    transform translateY(0) // put back to normal resting spot
    

.count-leave
  transition all 0.25s
  position absolute // need to have one overlap another
  left 0
  bottom 0
  transform translateY(0)
  &.count-leave-active
    transform translateY(-100%)
